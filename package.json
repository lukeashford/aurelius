{
  "name": "@lukeashford/aurelius",
  "version": "1.1.0",
  "description": "Design system for Aurelius applications â€” A cohesive visual language for creative technologists",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tailwind.preset": {
      "types": "./dist/tailwind.preset.d.ts",
      "import": "./dist/tailwind.preset.mjs",
      "require": "./dist/tailwind.preset.js"
    },
    "./styles/*": "./dist/styles/*",
    "./llms.md": "./llms.md",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "llms.md"
  ],
  "scripts": {
    "build:css": "tailwindcss -c tailwind.build.config.cjs -i src/styles/base.css -o dist/styles/base.css --minify",
    "build": "tsup && npm run build:css && node scripts/generate-manifest.js",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "dev:demo": "npm --prefix demo run dev",
    "dev:all": "concurrently -k \"npm run dev\" \"npm run dev:demo\""
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss": "^3.4.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukeashford/aurelius.git"
  },
  "keywords": [
    "design-system",
    "tailwind",
    "react",
    "design-tokens",
    "ui",
    "aurelius"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "lucide-react": "^0.555.0"
  }
}
